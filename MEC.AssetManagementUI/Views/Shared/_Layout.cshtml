<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MEC Asset Management</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <a asp-controller="Home" asp-action="Index" class="d-inline-block">
                    <img src="~/content/images/logo.png" alt="Logo" class="logo-img">
                </a>
                <button type="button" id="sidebarCollapse" title="Menüyü Daralt/Genişlet">
                    <i class="bi bi-list"></i>
                </button>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a asp-controller="Asset" asp-action="Index">
                        <i class="bi bi-box-seam-fill"></i>
                        <span>Envanter</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="Employee" asp-action="Index">
                        <i class="bi bi-people-fill"></i>
                        <span>Çalışanlar</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="ActiveLoan" asp-action="Index">
                        <i class="bi bi-arrow-left-right"></i>
                        <span>Zimmetler</span>
                    </a>
                </li>

                <li>
                    <a href="#settingsSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle d-flex align-items-center justify-content-between">
                        <div>
                            <i class="bi bi-gear-fill"></i>
                            <span>Ayarlar</span>
                        </div>
                    </a>

                    <ul class="collapse list-unstyled ps-3" id="settingsSubmenu">
                        <li>
                            <a asp-controller="School" asp-action="Index">
                                <i class="bi bi-building me-2"></i> Okullar
                            </a>
                        </li>
                        <li>
                            <a asp-controller="EmployeeType" asp-action="Index">
                                <i class="bi bi-person-badge me-2"></i> Çalışan Türleri
                            </a>
                        </li>
                        <li>
                            <a asp-controller="AssetType" asp-action="Index">
                                <i class="bi bi-tags-fill me-2"></i> Eşya Türleri
                            </a>
                        </li>
                        <li>
                            <a asp-controller="AssetStatus" asp-action="Index">
                                <i class="bi bi-heart-pulse-fill me-2"></i> Eşya Durumu
                            </a>
                        </li>
                        <li>
                            <a asp-controller="LoanStatus" asp-action="Index">
                                <i class="bi bi-clipboard-check-fill me-2"></i> Zimmet Durumu
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>

        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 shadow-sm rounded">
                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h1 ms-2">Yönetim Paneli</span>

                    <div class="ms-auto">
                        <span class="me-3">Merhaba, Admin</span>
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-sm btn-danger">Çıkış</a>
                    </div>
                </div>
            </nav>

            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>