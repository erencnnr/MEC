@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="display-6">Genel Bakış</h2>
            <p class="text-muted">Okul envanter durumuna hızlı bir bakış.</p>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-3">
            <div class="card text-white bg-primary h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-pc-display"></i> Toplam Cihaz</h5>
                    <p class="card-text fs-2 fw-bold">124</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-check-circle"></i> Zimmetli</h5>
                    <p class="card-text fs-2 fw-bold">98</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning text-dark h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box-seam"></i> Depoda</h5>
                    <p class="card-text fs-2 fw-bold">20</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-tools"></i> Arızalı/Serviste</h5>
                    <p class="card-text fs-2 fw-bold">6</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle-fill"></i> Sistem şu an geliştirme aşamasındadır.
            </div>
        </div>
    </div>
</div>