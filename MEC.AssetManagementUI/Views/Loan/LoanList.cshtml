@using MEC.Domain.Common
@using MEC.Application.Abstractions.Service.LoanService.Model
@using MEC.AssetManagementUI.Models.LoanModel
@model PagedResult<LoanListViewModel>

@{
    ViewData["Title"] = "Zimmet Listesi";
    var filter = ViewBag.CurrentFilters as LoanFilterRequestModel;

    // Varsayılan sekme 'active' olsun
    string activeTab = !string.IsNullOrEmpty(filter?.ActiveTab) ? filter.ActiveTab : "active";

    // Filtre Dolu mu? (Temizle butonu için)
    bool isFilterActive = filter != null &&
        (!string.IsNullOrEmpty(filter.SearchText) ||
         (filter.AssignedToIds != null && filter.AssignedToIds.Any()));
}

<style>
    .table-fixed {
        table-layout: fixed;
        width: 100%;
    }

    .truncate-cell {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .filter-scroll-list {
        max-height: 200px;
        overflow-y: auto;
    }
</style>

<div class="container-fluid">
    <h2 class="h3 mb-4 text-gray-800">Zimmet Yönetimi</h2>

    @* --- 1. ARAMA VE FİLTRE FORMU (GET) --- *@
    <form method="get" asp-action="Index" asp-controller="Loan" id="mainFilterForm">

        @* Sayfa, Sekme ve Sıralama Bilgilerini Saklayan Gizli Inputlar *@
        <input type="hidden" name="Page" id="currentPageInput" value="@Model.CurrentPage" />
        <input type="hidden" name="ActiveTab" id="activeTabInput" value="@activeTab" />

        @* --- YENİ EKLENEN KISIM: Sıralama Bilgisi --- *@
        <input type="hidden" name="SortOrder" id="sortOrderInput" value="@ViewBag.CurrentSort" />

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex gap-2">
                @* Yeni Zimmet Butonu *@
                @*
                <a href="@Url.Action("AssignAsset", "Loan")" class="btn btn-primary shadow-sm">
                    <i class="bi bi-box-arrow-up-right"></i> Yeni Zimmet
                </a>
                *@
                @* Excel Export (Mevcut filtrelerle) *@
                <button type="submit" formaction="@Url.Action("ExportToExcel", "Loan")" class="btn btn-success shadow-sm text-white">
                    <i class="bi bi-file-earmark-excel-fill me-1"></i> Excel'e Aktar
                </button>
            </div>

            <div class="d-flex align-items-center gap-2">
                @if (isFilterActive)
                {
                    <a asp-action="Index" asp-route-ActiveTab="@activeTab" class="btn btn-sm btn-danger shadow-sm text-white d-flex align-items-center" title="Filtreleri Temizle">
                        <i class="bi bi-x-circle-fill me-1"></i> Temizle
                    </a>
                }

                <div class="input-group" style="width: 300px;">
                    <input type="text" name="SearchText" class="form-control" placeholder="Personel, Eşya, Seri No..." value="@filter?.SearchText">
                    <button class="btn btn-primary" type="submit" onclick="resetPage()">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>

        @* --- 2. TABLAR (Sekmeler) --- *@
        <ul class="nav nav-tabs mb-3">
            <li class="nav-item">
                <button class="nav-link @(activeTab == "active" ? "active fw-bold" : "")" type="button" onclick="changeTab('active')">
                    <i class="bi bi-check-circle-fill text-success me-1"></i> Aktif Zimmetler
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link @(activeTab == "history" ? "active fw-bold" : "")" type="button" onclick="changeTab('history')">
                    <i class="bi bi-clock-history text-secondary me-1"></i> Zimmet Geçmişi
                </button>
            </li>
        </ul>

        @* --- FİLTRE DROPDOWNLARI --- *@
        <div class="card shadow mb-4">
            <div class="card-body p-0">
                @* Tablo başlığındaki filtreler form="mainFilterForm" attribute'u ile bu forma bağlanır *@
            </div>
        </div>
    </form>

    @* --- TABLO VE TOPLU İŞLEM ALANI --- *@
    <form method="post" action="@Url.Action("BulkReturn", "Loan")" id="bulkForm">
        @if (activeTab == "active")
        {
            <div class="mb-2 ms-1">
                <button type="submit" class="btn btn-sm btn-outline-warning" onclick="return confirm('Seçili zimmetleri iade almak istediğinize emin misiniz? (Bugünün tarihiyle iade alınacak)');">
                    <i class="bi bi-box-arrow-in-down-left"></i> Seçilenleri İade Al
                </button>
                <input type="hidden" name="returnDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
        }

        <div class="card shadow mb-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover mb-0 table-fixed" width="100%">
                        <thead class="table-light">
                            <tr class="align-middle">
                                @if (activeTab == "active")
                                {
                                    <th style="width: 40px;" class="text-center">
                                        <input type="checkbox" class="form-check-input" id="selectAll" />
                                    </th>
                                }

                                <th style="width: 150px;">Eşya</th>
                                <th style="width: 120px;">Seri No</th>

                                @* PERSONEL FİLTRESİ *@
                                <th style="width: 200px;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Zimmet Alan</span>
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-chevron-down @(filter?.AssignedToIds != null && filter.AssignedToIds.Any() ? "text-primary fw-bold" : "text-muted")"></i>
                                            </button>
                                            <div class="dropdown-menu p-3 shadow border-0" style="min-width: 250px; z-index: 1050;">
                                                <label class="form-label small fw-bold text-muted">Personel Filtrele</label>
                                                <div class="filter-scroll-list mb-2">
                                                    @if (ViewBag.Employees != null)
                                                    {
                                                        foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Employees)
                                                        {
                                                            var isChecked = filter?.AssignedToIds != null && filter.AssignedToIds.Contains(int.Parse(item.Value));
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="AssignedToIds" value="@item.Value" id="emp_@item.Value" form="mainFilterForm" @(isChecked ? "checked" : "")>
                                                                <label class="form-check-label small" for="emp_@item.Value">@item.Text</label>
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                                <div class="d-grid">
                                                    <button type="button" class="btn btn-sm btn-primary" onclick="submitMainForm()">Uygula</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </th>

                                <th style="width: 150px;">Zimmet Veren</th>

                                @* --- VERİLİŞ TARİHİ SÜTUNU (Dropdownlu Sıralama) --- *@
                                <th style="width: 180px;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Veriliş Tarihi</span>
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                @* Eğer sıralama bu sütundaysa ikonu mavi yap *@
                                                <i class="bi bi-chevron-down @(ViewBag.CurrentSort != null && ViewBag.CurrentSort.Contains("LoanDate") ? "text-primary fw-bold" : "text-muted")"></i>
                                            </button>
                                            <ul class="dropdown-menu shadow border-0 p-2">
                                                <li><h6 class="dropdown-header small text-muted">Sıralama Seçiniz</h6></li>
                                                <li>
                                                    <button class="dropdown-item rounded @(ViewBag.CurrentSort == "LoanDate_Asc" ? "active" : "")"
                                                            type="button" onclick="changeSort('LoanDate_Asc')">
                                                        <i class="bi bi-sort-numeric-down me-2"></i>Eskiden Yeniye
                                                    </button>
                                                </li>
                                                <li>
                                                    <button class="dropdown-item rounded @(ViewBag.CurrentSort == "LoanDate_Desc" ? "active" : "")"
                                                            type="button" onclick="changeSort('LoanDate_Desc')">
                                                        <i class="bi bi-sort-numeric-down-alt me-2"></i>Yeniden Eskiye
                                                    </button>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </th>

                                @if (activeTab == "history")
                                {
                                    @* --- İADE TARİHİ SÜTUNU (Dropdownlu Sıralama) --- *@
                                    <th style="width: 180px;">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span>İade Tarihi</span>
                                            <div class="dropdown">
                                                <button class="btn btn-sm p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="bi bi-chevron-down @(ViewBag.CurrentSort != null && ViewBag.CurrentSort.Contains("ReturnDate") ? "text-primary fw-bold" : "text-muted")"></i>
                                                </button>
                                                <ul class="dropdown-menu shadow border-0 p-2">
                                                    <li><h6 class="dropdown-header small text-muted">Sıralama Seçiniz</h6></li>
                                                    <li>
                                                        <button class="dropdown-item rounded @(ViewBag.CurrentSort == "ReturnDate_Asc" ? "active" : "")"
                                                                type="button" onclick="changeSort('ReturnDate_Asc')">
                                                            <i class="bi bi-sort-numeric-down me-2"></i>Eskiden Yeniye
                                                        </button>
                                                    </li>
                                                    <li>
                                                        <button class="dropdown-item rounded @(ViewBag.CurrentSort == "ReturnDate_Desc" ? "active" : "")"
                                                                type="button" onclick="changeSort('ReturnDate_Desc')">
                                                            <i class="bi bi-sort-numeric-down-alt me-2"></i>Yeniden Eskiye
                                                        </button>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </th>
                                }

                                <th style="width: 100px;" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Results != null && Model.Results.Any())
                            {
                                foreach (var item in Model.Results)
                                {
                                    <tr>
                                        @if (activeTab == "active")
                                        {
                                            <td class="text-center">
                                                <input type="checkbox" class="form-check-input loan-checkbox" name="selectedLoanIds" value="@item.Id" />
                                            </td>
                                        }

                                        <td class="truncate-cell" title="@item.AssetName">@item.AssetName</td>
                                        <td class="truncate-cell">@item.SerialNumber</td>
                                        <td class="truncate-cell" title="@item.AssignedToName">@item.AssignedToName</td>
                                        <td class="truncate-cell">@item.AssignedByName</td>
                                        <td>@item.LoanDate</td>

                                        @if (activeTab == "history")
                                        {
                                            <td>@item.ReturnDate</td>
                                        }

                                        <td class="text-center">
                                            @if (item.IsActive)
                                            {
                                                @* İade Al Butonu *@
                                                <form asp-action="BulkReturn" asp-controller="Loan" method="post" style="display:inline;">
                                                    <input type="hidden" name="selectedLoanIds" value="@item.Id" />
                                                    <input type="hidden" name="returnDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                                    <button type="submit" class="btn btn-sm btn-warning text-white" title="İade Al"
                                                            onclick="return confirm('@item.AssetName ürününü @item.AssignedToName kişisinden iade almak istediğinize emin misiniz?');">
                                                        <i class="bi bi-box-arrow-in-down-left"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">İade Edildi</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="@(activeTab == "active" ? 7 : 7)" class="text-center py-5 text-muted">
                                        <i class="bi bi-journal-x fs-1 d-block mb-3 text-gray-300"></i>
                                        <p>Kayıt bulunamadı.</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </form>

    @* --- SAYFALAMA KONTROLLERİ --- *@
    @if (Model.PageCount > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <button class="page-link" type="button" onclick="changePage(@(Model.CurrentPage - 1))">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                </li>
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <button class="page-link" type="button" onclick="changePage(@i)">@i</button>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.PageCount ? "disabled" : "")">
                    <button class="page-link" type="button" onclick="changePage(@(Model.CurrentPage + 1))">
                        <i class="bi bi-chevron-right"></i>
                    </button>
                </li>
            </ul>
            <div class="text-center text-muted small">
                Toplam @Model.RowCount kayıttan @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.RowCount) arası gösteriliyor.
            </div>
        </nav>
    }
</div>

@section Scripts {
    <script>
        // Sayfa Değiştirme
        function changePage(page) {
            document.getElementById('currentPageInput').value = page;
            document.getElementById('mainFilterForm').submit();
        }

        // Arama yapıldığında sayfa 1'e dönsün
        function resetPage() {
            document.getElementById('currentPageInput').value = 1;
        }

        // Sekme Değiştirme
        function changeTab(tabName) {
            document.getElementById('activeTabInput').value = tabName;
            resetPage(); // Sekme değişince 1. sayfaya dön
            document.getElementById('mainFilterForm').submit();
        }

        // Ana Formu Submit Et (Dropdown içindeki buton için)
        function submitMainForm() {
            resetPage();
            document.getElementById('mainFilterForm').submit();
        }

        // YENİ EKLENEN FONKSİYON: Sıralamayı Değiştirir
        function changeSort(sortOrder) {
            // 1. Gizli inputa seçilen sıralama değerini yaz
            document.getElementById('sortOrderInput').value = sortOrder;

            // 2. Sayfayı 1'e sıfırla (Sıralama değişince ilk sayfaya dönmek iyidir)
            resetPage();

            // 3. Formu gönder (Tüm filtrelerle birlikte)
            document.getElementById('mainFilterForm').submit();
        }

        // Tümünü Seç (Checkbox)
        document.getElementById('selectAll')?.addEventListener('change', function () {
            var checkboxes = document.querySelectorAll('.loan-checkbox');
            for (var checkbox of checkboxes) {
                checkbox.checked = this.checked;
            }
        });
    </script>
}