@model MEC.AssetManagementUI.Models.AssetModel.AssetCreateViewModel

@{
    ViewData["Title"] = "Yeni Demirbaş Ekle";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Hızlı Demirbaş Kaydı</h6>
            <a asp-action="Index" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> Listeye Dön
            </a>
        </div>
        <div class="card-body">
            <form asp-action="CreateAsset" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Dell Latitude 3520" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SerialNumber" class="form-label fw-bold"></label>
                            <input asp-for="SerialNumber" class="form-control" placeholder="Seri No giriniz" />
                            <span asp-validation-for="SerialNumber" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="AssetTypeId" class="form-label fw-bold">Demirbaş Türü</label>
                            <select asp-for="AssetTypeId" class="form-select" asp-items="ViewBag.Types">
                                <option value="">-- Seçiniz --</option>
                            </select>
                            <span asp-validation-for="AssetTypeId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SchoolId" class="form-label fw-bold">Konum / Okul</label>
                            <select asp-for="SchoolId" class="form-select" asp-items="ViewBag.Schools">
                                <option value="">-- Seçiniz --</option>
                            </select>
                            <span asp-validation-for="SchoolId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Ek açıklama..."></textarea>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>