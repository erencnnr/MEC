@model List<MEC.AssetManagementUI.Models.AssetModel.AssetListViewModel>

@{
    ViewData["Title"] = "Demirbaş Listesi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0 text-gray-800">
            <i class="bi bi-pc-display-horizontal me-2"></i>Demirbaş Listesi
        </h2>
        <a href="#" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg text-white-50"></i> Yeni Demirbaş Ekle
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kayıtlı Demirbaşlar</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr>
                            <th>Seri No</th>
                            <th>Tür</th>
                            <th>Açıklama</th>
                            <th>Konum (Okul)</th>
                            <th>Durum</th>
                            <th>Maliyet</th>
                            <th>Alım Tarihi</th>
                            <th style="width: 100px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold text-primary">@item.SerialNumber</td>
                                    <td>@item.AssetTypeName</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <i class="bi bi-building me-1 text-muted"></i>@item.SchoolName
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-@item.StatusColor rounded-pill">
                                            @item.StatusName
                                        </span>
                                    </td>
                                    <td>@(item.Cost.HasValue ? item.Cost.Value.ToString("C2") : "-")</td>
                                    <td>@item.PurchaseDate</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary" title="Düzenle">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger" title="Sil">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    Kayıtlı demirbaş bulunamadı.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>