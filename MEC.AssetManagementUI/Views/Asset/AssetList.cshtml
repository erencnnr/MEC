@using MEC.Application.Abstractions.Service.AssetService.Model
@using MEC.AssetManagementUI.Models.AssetModel
@model List<AssetListViewModel>

@{
    ViewData["Title"] = "Demirbaş Listesi";
    var filter = ViewBag.CurrentFilters as AssetFilterRequestModel;
}

<style>
    .table-fixed {
        table-layout: fixed;
        width: 100%;
    }

    .truncate-cell {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .filter-scroll-list {
        max-height: 200px;
        overflow-y: auto;
    }
</style>

<div class="container-fluid">
    <h2 class="h3 mb-4 text-gray-800">Demirbaş Yönetimi</h2>

    <form method="get" asp-action="Index" asp-controller="Asset" id="mainFilterForm">

        <div class="d-flex justify-content-between align-items-center mb-3">

            <div class="d-flex gap-2">
                <a asp-action="CreateAsset" class="btn btn-primary shadow-sm">
                    <i class="bi bi-plus-lg"></i> Yeni Ekle
                </a>

                <button type="submit"
                        formaction="@Url.Action("ExportToExcel", "Asset")"
                        class="btn btn-success shadow-sm text-white">
                    <i class="bi bi-file-earmark-excel-fill me-1"></i> Excel'e Aktar
                </button>
            </div>

            <div class="d-flex align-items-center gap-2">
                @if (filter != null && (!string.IsNullOrEmpty(filter.SearchText) ||
                (filter.SchoolIds != null && filter.SchoolIds.Any()) ||
                (filter.AssetTypeIds != null && filter.AssetTypeIds.Any()) ||
                (filter.AssetStatusIds != null && filter.AssetStatusIds.Any())))
                {
                    <a asp-action="Index" class="btn btn-sm btn-danger shadow-sm text-white d-flex align-items-center" title="Filtreleri Temizle">
                        <i class="bi bi-x-circle-fill me-1"></i> Temizle
                    </a>
                }

                <div class="input-group" style="width: 300px;">
                    <input type="text" name="SearchText" class="form-control"
                           placeholder="Seri No, Marka, Model..."
                           value="@filter?.SearchText">
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-body p-0">
                <div class="table-responsive" style="min-height: 600px;">
                    <table class="table table-bordered table-hover mb-0 table-fixed" width="100%">
                        <thead class="table-light">
                            <tr class="align-middle">

                                <th style="width: 150px;">Seri No</th>
                                <th style="width: 200px;">Demirbaş Adı</th>

                                <th style="width: 150px;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Tür</span>
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-chevron-down @(filter?.AssetTypeIds != null && filter.AssetTypeIds.Any() ? "text-primary fw-bold" : "text-muted")"></i>
                                            </button>
                                            <div class="dropdown-menu p-3 shadow border-0" style="min-width: 250px; z-index: 1050;">
                                                <label class="form-label small fw-bold text-muted">Tür Filtrele</label>
                                                <div class="filter-scroll-list mb-2">
                                                    @if (ViewBag.Types != null)
                                                    {
                                                        foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Types)
                                                        {
                                                            var isChecked = filter?.AssetTypeIds != null && filter.AssetTypeIds.Contains(int.Parse(item.Value));
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="AssetTypeIds" value="@item.Value" id="type_@item.Value" @(isChecked ? "checked" : "")>
                                                                <label class="form-check-label small" for="type_@item.Value">@item.Text</label>
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-sm btn-primary">Uygula</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </th>

                                <th style="width: 250px;">Açıklama</th>

                                <th style="width: 200px;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Konum / Okul</span>
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-chevron-down @(filter?.SchoolIds != null && filter.SchoolIds.Any() ? "text-primary fw-bold" : "text-muted")"></i>
                                            </button>
                                            <div class="dropdown-menu p-3 shadow border-0" style="min-width: 250px;">
                                                <label class="form-label small fw-bold text-muted">Okul Filtrele</label>
                                                <div class="filter-scroll-list mb-2">
                                                    @if (ViewBag.Schools != null)
                                                    {
                                                        foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Schools)
                                                        {
                                                            var isChecked = filter?.SchoolIds != null && filter.SchoolIds.Contains(int.Parse(item.Value));
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="SchoolIds" value="@item.Value" id="school_@item.Value" @(isChecked ? "checked" : "")>
                                                                <label class="form-check-label small" for="school_@item.Value">@item.Text</label>
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-sm btn-primary">Uygula</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </th>

                                <th style="width: 130px;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Durum</span>
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-chevron-down @(filter?.AssetStatusIds != null && filter.AssetStatusIds.Any() ? "text-primary fw-bold" : "text-muted")"></i>
                                            </button>
                                            <div class="dropdown-menu p-3 shadow border-0" style="min-width: 200px;">
                                                <label class="form-label small fw-bold text-muted">Durum Filtrele</label>
                                                <div class="filter-scroll-list mb-2">
                                                    @if (ViewBag.Statuses != null)
                                                    {
                                                        foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Statuses)
                                                        {
                                                            var isChecked = filter?.AssetStatusIds != null && filter.AssetStatusIds.Contains(int.Parse(item.Value));
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="AssetStatusIds" value="@item.Value" id="status_@item.Value" @(isChecked ? "checked" : "")>
                                                                <label class="form-check-label small" for="status_@item.Value">@item.Text</label>
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-sm btn-primary">Uygula</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </th>

                                <th style="width: 120px;">Alım Tarihi</th>

                                <th style="width: 60px;" class="text-center">
                                    <i class="bi bi-trash text-muted"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr onclick="location.href='@Url.Action("AssetInfo", "Asset", new { id = item.Id })'"
                                        style="cursor: pointer;">

                                        <td class="text-primary truncate-cell" title="@item.SerialNumber">@item.SerialNumber</td>
                                        <td class="truncate-cell" title="@item.Name">@item.Name</td>
                                        <td class="truncate-cell">@item.AssetTypeName</td>
                                        <td class="truncate-cell" title="@item.Description">@item.Description</td>
                                        <td class="truncate-cell" title="@item.SchoolName">@item.SchoolName</td>
                                        <td class="text-center">
                                            <span class="badge bg-@item.StatusColor rounded-pill">
                                                @item.StatusName
                                            </span>
                                        </td>

                                        <td>@item.PurchaseDate</td>

                                        <td class="text-center">
                                            <button type="button" class="btn btn-sm btn-outline-danger border-0"
                                                    title="Sil"
                                                    onclick="event.stopPropagation(); if(confirm('Bu kaydı silmek istediğinize emin misiniz?')) { /* Silme Linki */ }">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center py-5 text-muted">
                                        <i class="bi bi-inbox fs-1 d-block mb-3 text-gray-300"></i>
                                        <p>Kayıt bulunamadı.</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </form>
</div>