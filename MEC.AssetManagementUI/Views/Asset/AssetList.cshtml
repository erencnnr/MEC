@using MEC.Domain.Common
@using MEC.Application.Abstractions.Service.AssetService.Model
@using MEC.AssetManagementUI.Models.AssetModel
@model PagedResult<AssetListViewModel>

@{
    ViewData["Title"] = "Envanter";
    var filter = ViewBag.CurrentFilters as AssetFilterRequestModel;

    // Filtre var mı kontrolü (Temizle butonu için)
    bool isFilterActive = filter != null &&
        (!string.IsNullOrEmpty(filter.SearchText) ||
         (filter.SchoolIds != null && filter.SchoolIds.Any()) ||
         (filter.AssetTypeIds != null && filter.AssetTypeIds.Any()) ||
         (filter.AssetStatusIds != null && filter.AssetStatusIds.Any()));
}

<style>
    .table-fixed {
        table-layout: fixed;
        width: 100%;
    }

    .truncate-cell {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .filter-scroll-list {
        max-height: 200px;
        overflow-y: auto;
    }

    .cursor-pointer {
        cursor: pointer;
    }
</style>

<div class="container-fluid">
    <h2 class="h3 mb-4 text-gray-800">Envanter Yönetimi</h2>

    @* Form GET olarak çalışır, tüm filtreler ve sayfa numarası bu form ile taşınır *@
    <form method="get" asp-action="Index" asp-controller="Asset" id="mainFilterForm">

        @* SAYFA VE SIRALAMA BİLGİSİNİ SAKLAYAN GİZLİ INPUTLAR *@
        <input type="hidden" name="Page" id="currentPageInput" value="@Model.CurrentPage" />

        @* --- YENİ EKLENEN: Sıralama Inputu --- *@
        <input type="hidden" name="SortOrder" id="sortOrderInput" value="@ViewBag.CurrentSort" />

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex gap-2">
                <a asp-action="CreateAsset" class="btn btn-primary shadow-sm">
                    <i class="bi bi-plus-lg"></i> Yeni Ekle
                </a>

                @* Excel Export butonu (FormAction ile farklı action'a gider) *@
                <button type="submit" formaction="@Url.Action("ExportToExcel", "Asset")" class="btn btn-success shadow-sm text-white">
                    <i class="bi bi-file-earmark-excel-fill me-1"></i> Excel'e Aktar
                </button>
            </div>

            <div class="d-flex align-items-center gap-2">
                @if (isFilterActive)
                {
                    <a asp-action="Index" class="btn btn-sm btn-danger shadow-sm text-white d-flex align-items-center" title="Filtreleri Temizle">
                        <i class="bi bi-x-circle-fill me-1"></i> Temizle
                    </a>
                }

                <div class="input-group" style="width: 300px;">
                    @* Arama yapıldığında sayfa 1'e dönmesi için onchange ekleyebiliriz veya controller halleder *@
                    <input type="text" name="SearchText" class="form-control" placeholder="Seri No, Marka, Model..." value="@filter?.SearchText">
                    <button class="btn btn-primary" type="submit" onclick="resetPage()">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover mb-0 table-fixed" width="100%">
                        <thead class="table-light">
                            <tr class="align-middle">
                                <th style="width: 150px;">Seri No</th>
                                <th style="width: 200px;">Ad</th>

                                @* TÜR FİLTRESİ *@
                                <th style="width: 150px;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Tür</span>
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-chevron-down @(filter?.AssetTypeIds != null && filter.AssetTypeIds.Any() ? "text-primary fw-bold" : "text-muted")"></i>
                                            </button>
                                            <div class="dropdown-menu p-3 shadow border-0" style="min-width: 250px; z-index: 1050;">
                                                <label class="form-label small fw-bold text-muted">Tür Filtrele</label>
                                                <div class="filter-scroll-list mb-2">
                                                    @if (ViewBag.Types != null)
                                                    {
                                                        foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Types)
                                                        {
                                                            var isChecked = filter?.AssetTypeIds != null && filter.AssetTypeIds.Contains(int.Parse(item.Value));
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="AssetTypeIds" value="@item.Value" id="type_@item.Value" @(isChecked ? "checked" : "")>
                                                                <label class="form-check-label small" for="type_@item.Value">@item.Text</label>
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                                <div class="d-grid">
                                                    <button type="button" class="btn btn-sm btn-primary" onclick="submitMainForm()">Uygula</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </th>

                                <th style="width: 250px;">Açıklama</th>

                                @* OKUL FİLTRESİ *@
                                <th style="width: 200px;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Konum / Okul</span>
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-chevron-down @(filter?.SchoolIds != null && filter.SchoolIds.Any() ? "text-primary fw-bold" : "text-muted")"></i>
                                            </button>
                                            <div class="dropdown-menu p-3 shadow border-0" style="min-width: 250px;">
                                                <label class="form-label small fw-bold text-muted">Okul Filtrele</label>
                                                <div class="filter-scroll-list mb-2">
                                                    @if (ViewBag.Schools != null)
                                                    {
                                                        foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Schools)
                                                        {
                                                            var isChecked = filter?.SchoolIds != null && filter.SchoolIds.Contains(int.Parse(item.Value));
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="SchoolIds" value="@item.Value" id="school_@item.Value" @(isChecked ? "checked" : "")>
                                                                <label class="form-check-label small" for="school_@item.Value">@item.Text</label>
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                                <div class="d-grid">
                                                    <button type="button" class="btn btn-sm btn-primary" onclick="submitMainForm()">Uygula</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </th>

                                @* DURUM FİLTRESİ *@
                                <th style="width: 130px;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Durum</span>
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-chevron-down @(filter?.AssetStatusIds != null && filter.AssetStatusIds.Any() ? "text-primary fw-bold" : "text-muted")"></i>
                                            </button>
                                            <div class="dropdown-menu p-3 shadow border-0" style="min-width: 200px;">
                                                <label class="form-label small fw-bold text-muted">Durum Filtrele</label>
                                                <div class="filter-scroll-list mb-2">
                                                    @if (ViewBag.Statuses != null)
                                                    {
                                                        foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Statuses)
                                                        {
                                                            var isChecked = filter?.AssetStatusIds != null && filter.AssetStatusIds.Contains(int.Parse(item.Value));
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="AssetStatusIds" value="@item.Value" id="status_@item.Value" @(isChecked ? "checked" : "")>
                                                                <label class="form-check-label small" for="status_@item.Value">@item.Text</label>
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                                <div class="d-grid">
                                                    <button type="button" class="btn btn-sm btn-primary" onclick="submitMainForm()">Uygula</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </th>

                                @* --- YENİ EKLENEN KISIM: KAYIT TARİHİ VE SIRALAMA --- *@
                                <th style="width: 180px;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Kayıt Tarihi</span>
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-chevron-down @(ViewBag.CurrentSort != null && ViewBag.CurrentSort.ToString().Contains("Date") ? "text-primary fw-bold" : "text-muted")"></i>
                                            </button>
                                            <ul class="dropdown-menu shadow border-0 p-2">
                                                <li><h6 class="dropdown-header small text-muted">Sıralama Seçiniz</h6></li>
                                                <li>
                                                    <button class="dropdown-item rounded @(ViewBag.CurrentSort == "Date_Asc" ? "active" : "")"
                                                            type="button" onclick="changeSort('Date_Asc')">
                                                        <i class="bi bi-sort-numeric-down me-2"></i>Eskiden Yeniye
                                                    </button>
                                                </li>
                                                <li>
                                                    <button class="dropdown-item rounded @(ViewBag.CurrentSort == "Date_Desc" ? "active" : "")"
                                                            type="button" onclick="changeSort('Date_Desc')">
                                                        <i class="bi bi-sort-numeric-down-alt me-2"></i>Yeniden Eskiye
                                                    </button>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </th>

                                <th style="width: 60px;" class="text-center"><i class="bi bi-trash text-muted"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Results != null && Model.Results.Any())
                            {
                                @foreach (var item in Model.Results)
                                {
                                    <tr onclick="location.href='@Url.Action("AssetInfo", "Asset", new { id = item.Id })'" class="cursor-pointer">
                                        <td class="text-primary truncate-cell" title="@item.SerialNumber">@item.SerialNumber</td>
                                        <td class="truncate-cell" title="@item.Name">@item.Name</td>
                                        <td class="truncate-cell">@item.AssetTypeName</td>
                                        <td class="truncate-cell" title="@item.Description">@item.Description</td>
                                        <td class="truncate-cell" title="@item.SchoolName">@item.SchoolName</td>
                                        <td class="text-center">
                                            <span class="badge bg-@item.StatusColor rounded-pill">@item.StatusName</span>
                                        </td>

                                        <td>@item.CreatedDate</td>

                                        <td class="text-center">
                                            <button type="button" class="btn btn-sm btn-outline-danger border-0" title="Sil"
                                                    onclick="event.stopPropagation(); if(confirm('Bu kaydı silmek istediğinize emin misiniz?')) { /* Silme Linki */ }">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center py-5 text-muted">
                                        <i class="bi bi-inbox fs-1 d-block mb-3 text-gray-300"></i>
                                        <p>Kayıt bulunamadı.</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </form>

    @* --- SAYFALAMA KONTROLLERİ --- *@
    @if (Model.PageCount > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">

                @* Önceki Sayfa *@
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <button class="page-link" type="button" onclick="changePage(@(Model.CurrentPage - 1))">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                </li>

                @* Sayfa Numaraları *@
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <button class="page-link" type="button" onclick="changePage(@i)">@i</button>
                    </li>
                }

                @* Sonraki Sayfa *@
                <li class="page-item @(Model.CurrentPage == Model.PageCount ? "disabled" : "")">
                    <button class="page-link" type="button" onclick="changePage(@(Model.CurrentPage + 1))">
                        <i class="bi bi-chevron-right"></i>
                    </button>
                </li>
            </ul>
            <div class="text-center text-muted small">
                Toplam @Model.RowCount kayıttan @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.RowCount) arası gösteriliyor.
            </div>
        </nav>
    }
</div>

@section Scripts {
    <script>
        // Sayfa Değiştirme Fonksiyonu
        function changePage(page) {
            // Gizli input'un değerini güncelle ve formu gönder
            document.getElementById('currentPageInput').value = page;
            document.getElementById('mainFilterForm').submit();
        }

        // Yeni arama/filtreleme yapıldığında sayfayı 1'e sıfırlar
        function resetPage() {
            document.getElementById('currentPageInput').value = 1;
        }

        // YENİ EKLENEN: Sıralama Değiştirme Fonksiyonu
        function changeSort(sortOrder) {
            document.getElementById('sortOrderInput').value = sortOrder;
            resetPage(); // Sıralama değişince sayfa 1'e dön
            document.getElementById('mainFilterForm').submit();
        }

        // Dropdown içindeki Uygula butonları için (Opsiyonel: Eğer dropdown içinden de submit yapılıyorsa)
        function submitMainForm() {
            resetPage();
            document.getElementById('mainFilterForm').submit();
        }
    </script>
}