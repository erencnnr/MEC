@using MEC.Application.Abstractions.Service.AssetService.Model
@using MEC.AssetManagementUI.Models.AssetModel
@model List<AssetListViewModel>

@{
    ViewData["Title"] = "Demirbaş Listesi";
    // Filtreleri geri al
    var filter = ViewBag.CurrentFilter as AssetFilterRequestModel;
}

<div class="container-fluid">
    <h2 class="h3 mb-4 text-gray-800">Demirbaş Yönetimi</h2>

    <form method="get" asp-action="Index" asp-controller="Asset" id="mainFilterForm">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <a asp-action="CreateAsset" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-lg"></i> Yeni Ekle
            </a>

            <div class="input-group" style="width: 300px;">
                <input type="text" name="SearchText" class="form-control"
                       placeholder="Seri No, Marka, Model..."
                       value="@filter?.SearchText">
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i>
                </button>
                @if (!string.IsNullOrEmpty(filter?.SearchText) || filter?.SchoolId != null || filter?.AssetTypeId != null || filter?.AssetStatusId != null)
                {
                    <a asp-action="Index" class="btn btn-secondary" title="Filtreleri Temizle">
                        <i class="bi bi-x-lg"></i>
                    </a>
                }
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-body p-0">
                <div class="table-responsive" style="min-height: 600px;">
                    <table class="table table-bordered table-hover mb-0" width="100%">
                        <thead class="table-light">
                            <tr class="align-middle">

                                <th>Seri No</th>
                                <th>Demirbaş Adı</th>

                                <th>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Tür</span>
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-chevron-down @(filter?.AssetTypeId != null ? "text-primary fw-bold" : "text-muted")"></i>
                                            </button>
                                            <div class="dropdown-menu p-3 shadow border-0" style="min-width: 250px; z-index: 1050;">
                                                <label class="form-label small fw-bold text-muted">Tür Filtrele</label>
                                                <select name="AssetTypeId" class="form-select form-select-sm mb-2" asp-items="ViewBag.Types">
                                                    <option value="">-- Tümü --</option>
                                                </select>
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-sm btn-primary">Uygula</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </th>

                                <th>Açıklama</th>

                                <th>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Konum / Okul</span>
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-chevron-down @(filter?.SchoolId != null ? "text-primary fw-bold" : "text-muted")"></i>
                                            </button>
                                            <div class="dropdown-menu p-3 shadow border-0" style="min-width: 250px;">
                                                <label class="form-label small fw-bold text-muted">Okul Filtrele</label>
                                                <select name="SchoolId" class="form-select form-select-sm mb-2" asp-items="ViewBag.Schools">
                                                    <option value="">-- Tümü --</option>
                                                </select>
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-sm btn-primary">Uygula</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </th>

                                <th>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Durum</span>
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-chevron-down @(filter?.AssetStatusId != null ? "text-primary fw-bold" : "text-muted")"></i>
                                            </button>
                                            <div class="dropdown-menu p-3 shadow border-0" style="min-width: 200px;">
                                                <label class="form-label small fw-bold text-muted">Durum Filtrele</label>
                                                <select name="AssetStatusId" class="form-select form-select-sm mb-2" asp-items="ViewBag.Statuses">
                                                    <option value="">-- Tümü --</option>
                                                </select>
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-sm btn-primary">Uygula</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </th>

                                <th>Maliyet</th>
                                <th>Alım Tarihi</th>

                                <th style="width: 60px;" class="text-center">
                                    <i class="bi bi-trash text-muted"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr onclick="location.href='@Url.Action("AssetInfo", "Asset", new { id = item.Id })'"
                                        style="cursor: pointer;">

                                        <td class="fw-bold text-primary">@item.SerialNumber</td>
                                        <td class="fw-bold">@item.Name</td>
                                        <td>@item.AssetTypeName</td>
                                        <td>@item.Description</td>
                                        <td>@item.SchoolName</td>
                                        <td class="text-center">
                                            <span class="badge bg-@item.StatusColor rounded-pill">
                                                @item.StatusName
                                            </span>
                                        </td>
                                        <td>@(item.Cost.HasValue ? item.Cost.Value.ToString("C2") : "-")</td>
                                        <td>@item.PurchaseDate</td>

                                        <td class="text-center">
                                            <button type="button" class="btn btn-sm btn-outline-danger border-0"
                                                    title="Sil"
                                                    onclick="event.stopPropagation(); if(confirm('Bu kaydı silmek istediğinize emin misiniz?')) { /* Silme Linki */ }">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center py-5 text-muted">
                                        <i class="bi bi-inbox fs-1 d-block mb-3 text-gray-300"></i>
                                        <p>Kayıt bulunamadı.</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </form>
</div>