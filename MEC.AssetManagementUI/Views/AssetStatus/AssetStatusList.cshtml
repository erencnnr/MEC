@using MEC.Domain.Entity.Asset
@model List<AssetStatus>

@{
    ViewData["Title"] = "Eşya Durumları";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Eşya Durumları</h3>
        <button class="btn btn-primary" onclick="openModal(0, '')">
            <i class="bi bi-plus-lg"></i> Yeni Durum Ekle
        </button>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Durum Adı</th>
                        <th class="text-end" style="width: 150px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-warning me-1" onclick="openModal(@item.Id, '@item.Name')">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <a href="/AssetStatus/Delete/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bu durumu silmek istediğinize emin misiniz?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">Kayıtlı eşya durumu bulunamadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="saveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Kayıt Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="/AssetStatus/CreateOrUpdate">
                <div class="modal-body">
                    <input type="hidden" id="entityId" name="Id" value="0" />

                    <div class="mb-3">
                        <label class="form-label">Durum Adı</label>
                        <input type="text" class="form-control" id="entityName" name="Name" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <script>
        window.onload = function() {
            alert('@TempData["ErrorMessage"]');
        };
    </script>
}

<script>
    function openModal(id, name) {
        document.getElementById('entityId').value = id;
        document.getElementById('entityName').value = name;

        var title = id === 0 ? "Yeni Durum Ekle" : "Durumu Düzenle";
        document.getElementById('modalTitle').innerText = title;

        var myModal = new bootstrap.Modal(document.getElementById('saveModal'));
        myModal.show();
    }
</script>
