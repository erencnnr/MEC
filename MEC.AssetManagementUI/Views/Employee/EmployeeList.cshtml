@using MEC.Domain.Entity.Employee
@model List<Employee>

@{
    ViewData["Title"] = "Çalışanlar";
    // Listeyi View tarafında ikiye ayırıyoruz
    var activeEmployees = Model.Where(x => !x.IsDeleted).ToList();
    var passiveEmployees = Model.Where(x => x.IsDeleted).ToList();
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Çalışan Listesi</h2>
        <div>
            <button class="btn btn-outline-info me-2" id="btnSync">
                <i class="fa fa-refresh"></i> Senkronize Et
            </button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createEmployeeModal">
                + Yeni Çalışan
            </button>
        </div>
    </div>

    <ul class="nav nav-tabs mb-3" id="employeeTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#active" type="button" role="tab" aria-controls="active" aria-selected="true">
                Aktif Personeller (@activeEmployees.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="passive-tab" data-bs-toggle="tab" data-bs-target="#passive" type="button" role="tab" aria-controls="passive" aria-selected="false">
                Pasif Personeller (@passiveEmployees.Count)
            </button>
        </li>
    </ul>

    <div class="tab-content" id="employeeTabsContent">

        <div class="tab-pane fade show active" id="active" role="tabpanel" aria-labelledby="active-tab">
            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th>Kayıt Tarihi</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (activeEmployees.Any())
                            {
                                foreach (var item in activeEmployees)
                                {
                                    <tr>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@(item.CreatedDate.HasValue? item.CreatedDate.Value.ToString("dd.MM.yyyy") : "-")</td>
                                        <td class="text-end">
                                            <a href="/Employee/Delete/@item.Id"
                                               class="btn btn-sm btn-danger"
                                               onclick="return confirm('Bu kullanıcıyı pasife almak istediğinize emin misiniz?');"
                                               title="Pasife Al">
                                                <i class="fa fa-trash"></i> 🗑️
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="6" class="text-center text-muted">Aktif çalışan bulunamadı.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="passive" role="tabpanel" aria-labelledby="passive-tab">
            <div class="card shadow-sm border-danger">
                <div class="card-body">
                    <table class="table table-hover table-secondary align-middle">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th>Silinme Tarihi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (passiveEmployees.Any())
                            {
                                foreach (var item in passiveEmployees)
                                {
                                    <tr>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@(item.UpdateDate.HasValue? item.UpdateDate.Value.ToString("dd.MM.yyyy HH:mm") : "-")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="5" class="text-center text-muted">Pasif çalışan bulunamadı.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>