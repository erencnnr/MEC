@model MEC.AssetManagementUI.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-5 col-lg-4">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-5">

                    <div class="text-center mb-4">
                        <img src="~/content/images/logo.png"
                             asp-append-version="true"
                             alt="Şirket Logosu"
                             class="img-fluid"
                             style="max-height: 80px;" />

                        <h4 class="mt-3 text-secondary">Hoş Geldiniz</h4>
                        <p class="text-muted small">Devam etmek için lütfen giriş yapın.</p>
                    </div>

                    <form asp-action="Login" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small text-center"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" id="floatingInput" placeholder="Kullanıcı Adı" />
                            <label for="floatingInput">Kullanıcı Adı</label>
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Şifre" />
                            <label for="floatingPassword">Şifre</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg py-2">Giriş Yap</button>
                        </div>

                    </form>
                </div>
            </div>

            <div class="text-center mt-3 text-muted small">
                &copy; @DateTime.Now.Year - MEC Asset Management
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}