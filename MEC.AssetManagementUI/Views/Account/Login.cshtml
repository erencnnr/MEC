@model MEC.AssetManagementUI.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-5 col-lg-4">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-5">

                    <div class="text-center mb-4">
                        <img src="~/content/images/logo.png"
                             asp-append-version="true"
                             alt="Şirket Logosu"
                             class="img-fluid"
                             style="max-height: 80px;" />

                        <h4 class="mt-3 text-secondary">Hoş Geldiniz</h4>
                        <p class="text-muted small">Devam etmek için lütfen giriş yapın.</p>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show mb-3 small" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Login" method="post" id="loginForm" onsubmit="return handleLoginSubmit()">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small text-center"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" id="floatingInput" placeholder="Mail Adresi" required autofocus />
                            <label for="floatingInput">Kullanıcı Adı veya Email</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Şifre" required />
                            <label for="floatingPassword">Şifre</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" id="btnLogin" class="btn btn-primary btn-lg py-2">Giriş Yap</button>
                        </div>

                    </form>
                </div>
            </div>

            <div class="text-center mt-3 text-muted small">
                &copy; @DateTime.Now.Year
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Form gönderilmeden hemen önce çalışır
        function handleLoginSubmit() {
            var btn = document.getElementById('btnLogin');

            // Butonu kilitle ve içeriğini değiştir (Spinner ekle)
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span> Giriş Yapılıyor...';

            return true; // Formun gönderilmesine izin ver
        }

        // Sayfa yüklendiğinde hata mesajı varsa Popup olarak da göster
        document.addEventListener("DOMContentLoaded", function () {
            var errorMsg = '@Html.Raw(ViewBag.Error)';
            if (errorMsg && errorMsg.trim() !== "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Giriş Başarısız',
                    text: errorMsg,
                    confirmButtonText: 'Tamam',
                    confirmButtonColor: '#d33'
                });
            }
        });
    </script>
}